<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thenicky.fleettracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Vehicle Activity -->
        <activity
            android:name=".VehicleActivity"
            android:label="@string/vehicle_activity_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thenicky.fleettracker.MainActivity" />
        </activity>

        <!-- Trip Activity -->
        <activity
            android:name=".TripActivity"
            android:label="@string/trip_activity_name"
            android:parentActivityName=".VehicleActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">

            <!-- Link to parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thenicky.fleettracker.VehicleActivity" />
        </activity>

        <!-- Trip Settings Activity -->
        <activity
            android:name=".settings.TripSettingsActivity"
            android:label="@string/trip_settings_activity_name"
            android:parentActivityName=".TripActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- Link to parent activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thenicky.fleettracker.TripActivity" />
        </activity>

    </application>

</manifest>
